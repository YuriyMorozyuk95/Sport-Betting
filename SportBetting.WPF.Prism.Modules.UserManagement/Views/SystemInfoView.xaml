<UserControl x:Class="SportBetting.WPF.Prism.Modules.UserManagement.Views.SystemInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SportBetting.WPF.Prism.Shared.Converters;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="clr-namespace:TranslationByMarkupExtension;assembly=TranslationByMarkupExtension"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:SportBetting.WPF.Prism.Shared;assembly=SportBetting.WPF.Prism.Shared"
             mc:Ignorable="d">
    <UserControl.Resources>
        <shared:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityCollapsedConverter" />

        <Style x:Key="PrinterLabel"
               BasedOn="{StaticResource rowEntry}"
               TargetType="TextBlock">
            <Setter Property="Padding" Value="10, 0, 10, 0" />
            <Setter Property="Margin" Value="20, 0, 0, 0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsPrinterConnected}" Value="true">
                    <Setter Property="TextBlock.Background" Value="LimeGreen" />
                    <Setter Property="Foreground" Value="Black" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsPrinterConnected}" Value="false">
                    <Setter Property="TextBlock.Background" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BillValidatorLabel"
               BasedOn="{StaticResource rowEntry}"
               TargetType="TextBlock">
            <Setter Property="Padding" Value="10, 0, 10, 0" />
            <Setter Property="Margin" Value="20, 0, 0, 0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCashValidatorConnected}" Value="1">
                    <Setter Property="TextBlock.Background" Value="LimeGreen" />
                    <Setter Property="Foreground" Value="Black" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCashValidatorConnected}" Value="-1">
                    <Setter Property="TextBlock.Background" Value="Red" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCashValidatorConnected}" Value="0">
                    <Setter Property="TextBlock.Background" Value="Yellow" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="CoinValidatorLabel"
               BasedOn="{StaticResource rowEntry}"
               TargetType="TextBlock">
            <Setter Property="Padding" Value="10, 0, 10, 0" />
            <Setter Property="Margin" Value="20, 0, 0, 0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCoinValidatorConnected}" Value="true">
                    <Setter Property="TextBlock.Background" Value="LimeGreen" />
                    <Setter Property="Foreground" Value="Black" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsCoinValidatorConnected}" Value="false">
                    <Setter Property="TextBlock.Background" Value="Red" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="IdReaderLabel"
               BasedOn="{StaticResource rowEntry}"
               TargetType="TextBlock">
            <Setter Property="Padding" Value="10, 0, 10, 0" />
            <Setter Property="Margin" Value="20, 0, 0, 0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsIdReaderConnected}" Value="1">
                    <Setter Property="TextBlock.Background" Value="LimeGreen" />
                    <Setter Property="Foreground" Value="Black" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsIdReaderConnected}" Value="-1">
                    <Setter Property="TextBlock.Background" Value="Red" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsIdReaderConnected}" Value="0">
                    <Setter Property="TextBlock.Background" Value="IndianRed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />

        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <!--  <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" Height="700" MaxHeight="700" DockPanel.Dock="Top" x:Name="Scroller">  -->
            <Grid Width="auto"
                  HorizontalAlignment="Center"
                  DockPanel.Dock="Top">
                <!--
                    <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="Black" Offset="1" />
                    </LinearGradientBrush>
                    </Grid.Background>
                -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="0,50,0,0"
                           HorizontalAlignment="Center"
                           Style="{StaticResource importantText}"
                           Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_SYSTEM_INFO}}" />

                <Image x:Name="theader"
                       Grid.Row="1"
                       Width="760"
                       Height="3"
                       Margin="0, 20, 0, 0"
                       HorizontalAlignment="Center"
                       Source="{converters:ResolveImagePath Path=HeaderSeparator.png}"
                       Stretch="Fill" />

                <StackPanel Grid.Row="2"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center"
                               Style="{StaticResource headerEntry}"
                               Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_SYSTEM_TITLE}}" />
                </StackPanel>

                <Grid Grid.Row="3"
                      Width="760"
                      Margin="0, 20, 0, 0"
                      HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_OPERATION_SYSTEM}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
                    </StackPanel>
                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center"
                                   AutomationProperties.AutomationId="txtOS"
                                   Style="{StaticResource rowEntry}"
                                   Text="{Binding OsName}" />
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                Grid.Column="0"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_SYSTEM_TYPE}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Grid.Column="1"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center"
                                   AutomationProperties.AutomationId="txtOSType"
                                   Style="{StaticResource rowEntry}"
                                   Text="{Binding SystemType}" />
                    </StackPanel>

                    <StackPanel Grid.Row="2"
                                Grid.Column="0"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_INSTALLED_MEMORY}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
                    </StackPanel>
                    <StackPanel Grid.Row="2"
                                Grid.Column="1"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   AutomationProperties.AutomationId="txtRAM"
                                   Style="{StaticResource rowEntry}"
                                   Text="{Binding InstalledMemory}" />
                    </StackPanel>


                    <StackPanel Grid.Row="3"
                                Grid.Column="0"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_HARD_DRIVER}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
                        <TextBlock Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   AutomationProperties.AutomationId="txtHDD1"
                                   Style="{StaticResource rowEntry}"
                                   Text="{Binding DriveName[0]}" />
                    </StackPanel>
                    <StackPanel Grid.Row="3"
                                Grid.Column="1"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_TOTAL_SIZE}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
                        <TextBlock Margin="0, 0, 10, 0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   AutomationProperties.AutomationId="txtHDD1Size"
                                   Style="{StaticResource rowEntry}"
                                   Text="{Binding DriveTotalSize[0]}" />
                    </StackPanel>
                    <StackPanel Grid.Row="3"
                                Grid.Column="2"
                                MaxWidth="315"
                                Margin="0, 0, 0, 10"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left"
                                   Style="{StaticResource headerEntry}"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_INFO_FREE_SPACE}}" />
                        <TextBlock HorizontalAlignment="Center"
                                   Style="{StaticResource headerEntry}"
                                   Text=": " />
