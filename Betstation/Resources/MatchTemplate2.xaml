<UserControl x:Class="SportBetting.WPF.Prism.Resources.MatchTemplate2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SportBetting.WPF.Prism.Shared.Controls;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:converters2="clr-namespace:SportBetting.WPF.Prism.Shared.Converters;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:l="clr-namespace:TranslationByMarkupExtension;assembly=TranslationByMarkupExtension"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:SportRadar.DAL.ViewObjects;assembly=DAL"
             xmlns:wpfHelper="clr-namespace:SportBetting.WPF.Prism.Shared.WpfHelper;assembly=SportBetting.WPF.Prism.Shared"
             d:DataContext="{d:DesignInstance Type=viewModels:MatchVw}"
             d:DesignWidth="1000"
             mc:Ignorable="d">
    <Label Margin="0"
               HorizontalContentAlignment="Stretch"
               AutomationProperties.AutomationId="Match"
               Padding="0"
               Visibility="{Binding Visibility}">
        <VirtualizingStackPanel Orientation="Vertical"
                                    VirtualizationMode="Recycling"
                                    Visibility="{Binding Visibility}">

            <!--  sport header  -->
            <DockPanel Name="HeaderTemplate2"
                           Height="30"
                           Margin="0"
                           Background="#FFf0f0f0"
                           LastChildFill="False"
                           Visibility="{Binding IsHeader,
                                                Converter={StaticResource myBooleanToVisibilityConverter}}"
                           wpfHelper:SizeObserver.Observe="True">

                <TextBlock Margin="15,0,0,0"
                               VerticalAlignment="Center"
                               AutomationProperties.AutomationId="SportName"
                               DockPanel.Dock="Left"
                               Style="{StaticResource headerText}"
                               Text="{Binding SportView.DisplayName}" />

                <StackPanel Width="353"
                                DockPanel.Dock="Right"
                                Orientation="Horizontal">
                    <TextBlock Width="68"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="1"
                                   TextAlignment="Center" />
                    <TextBlock Width="68"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="2"
                                   TextAlignment="Center" />

                    <TextBlock Width="68"
                                   Margin="-1,0,0,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="G"
                                   TextAlignment="Center" />
                    <TextBlock Width="70"
                                   Margin="-1,0,0,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="U"
                                   TextAlignment="Center" />
                    <TextBlock Width="68"
                                   Margin="-1,0,0,0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="O"
                                   TextAlignment="Center" />
                </StackPanel>
            </DockPanel>

            <Border BorderBrush="#FFf0f0f0" BorderThickness="2, 0, 2, 2">
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="73" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="134" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Background" Value="#FF4d4d4d" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=(ItemsControl.AlternationIndex), Converter={StaticResource AlterationIndexAsOddEvenToBooleanConverter}, RelativeSource={RelativeSource FindAncestor, AncestorLevel=2, AncestorType={x:Type ContentPresenter}}}" Value="true">
                                    <Setter Property="Background" Value="#FF393939" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <!--  temporary closed cover  -->
                    <Grid Grid.RowSpan="2" Grid.ColumnSpan="3">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>interrupted</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <ImageBrush AlignmentX="Left"
                                                                AlignmentY="Top"
                                                                ImageSource="{converters2:ResolveImagePath Path=Disabled_row.png}"
                                                                Stretch="Fill" />
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="ZIndex" Value="1" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontFamily="Play"
                                       FontSize="32"
                                       FontWeight="Medium"
                                       Foreground="#FFb3b3b3"
                                       TextAlignment="Center"
                                       TextWrapping="NoWrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger>
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                    <Binding Path="IsEnabled" />
                                                    <Binding Path="LivePeriodInfo" />
                                                    <Binding Path="AllEnabledOddCount" />
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <DataTrigger.Value>interrupted</DataTrigger.Value>
                                            <Setter Property="Text" Value="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_TEMPORARY_CLOSED}}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!--
                            <Canvas Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Background="White"
                            Opacity="0.05" />
                        -->

                    <Canvas Grid.Row="0" Grid.Column="1">
                        <Canvas.Style>
                            <Style TargetType="Canvas">
                                <Style.Triggers>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>red</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#AAd01f00" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>orange</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#AAffa800" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>green</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#AA67b457" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>purple</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#AA7470c0" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>orange_overtime</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#AAFF8211" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Canvas.Style>
                    </Canvas>



                    <Canvas Grid.Row="1" Grid.ColumnSpan="2">
                        <Canvas.Style>
                            <Style TargetType="Canvas">
                                <Style.Triggers>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>red</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#77d01f00" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>orange</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#77ffa800" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>green</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#7767b457" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>purple</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#777470c0" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <DataTrigger.Value>orange_overtime</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="1,0.5" EndPoint="0,0.5">
                                                    <GradientStop Offset="1.0" Color="#77FF8211" />
                                                    <GradientStop Offset="0.0" Color="#00FFFFFF" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Canvas.Style>
                    </Canvas>

                    <Canvas Grid.RowSpan="2" Grid.ColumnSpan="3">
                        <Canvas.Style>
                            <Style TargetType="Canvas">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush AlignmentX="Left"
                                                        AlignmentY="Top"
                                                        ImageSource="{converters2:ResolveImagePath Path=Pattern-dark.png}"
                                                        Opacity="0.8"
                                                        Stretch="None"
                                                        TileMode="Tile"
                                                        Viewport="0,0,3,3"
                                                        ViewportUnits="Absolute" />
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=(ItemsControl.AlternationIndex), Converter={StaticResource AlterationIndexAsOddEvenToBooleanConverter}, RelativeSource={RelativeSource FindAncestor, AncestorLevel=2, AncestorType={x:Type ContentPresenter}}}" Value="true">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <ImageBrush AlignmentX="Left"
                                                                AlignmentY="Top"
                                                                ImageSource="{converters2:ResolveImagePath Path=Pattern-Light.png}"
                                                                Opacity="0.8"
                                                                Stretch="None"
                                                                TileMode="Tile"
                                                                Viewport="0,0,3,3"
                                                                ViewportUnits="Absolute" />
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Canvas.Style>
                    </Canvas>

                    <!--  not today  -->
                    <Label Margin="0"
                               AutomationProperties.AutomationId="NotToday"
                               Padding="0"
                               Visibility="{Binding StartDate,
                                                    Converter={StaticResource bInversTimeToVisibilityConverter}}">
                        <VirtualizingStackPanel Grid.Row="0"
                                                    Grid.Column="0"
                                                    Width="134"
                                                    Height="73"
                                                    HorizontalAlignment="Center"
                                                    IsEnabled="{Binding IsEnabled}"
                                                    Visibility="{Binding StartDate,
                                                                         Converter={StaticResource bInversTimeToVisibilityConverter}}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="54" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>

                                    <RowDefinition Height="24" />
                                    <RowDefinition Height="22" />
                                    <RowDefinition Height="24" />

                                </Grid.RowDefinitions>
                                <!--  date && month  -->
                                <VirtualizingStackPanel Grid.Row="0"
                                                            Grid.Column="0"
                                                            Margin="5,2,5,0"
                                                            VerticalAlignment="Bottom"
                                                            Orientation="Horizontal"
                                                            VirtualizationMode="Recycling">
                                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                        <VirtualizingStackPanel Orientation="Horizontal" VirtualizationMode="Recycling">
                                            <TextBlock FontFamily="Play"
                                                           FontSize="19"
                                                           FontWeight="Medium"
                                                           Foreground="#FFE5E5E5"
                                                           Text="{Binding StartDate,
                                                                          StringFormat={}{0:dd}}"
                                                           TextAlignment="Center"
                                                           TextWrapping="NoWrap" />
                                            <TextBlock FontFamily="Play"
                                                           FontSize="19"
                                                           FontWeight="Medium"
                                                           Foreground="#FFE5E5E5"
                                                           Text="{Binding StartDate,
                                                                          StringFormat={}{0:MMM.}}"
                                                           TextAlignment="Center"
                                                           TextWrapping="NoWrap" />
                                        </VirtualizingStackPanel>
                                    </Viewbox>

                                </VirtualizingStackPanel>
                                <!--  time && day  -->
                                <VirtualizingStackPanel Grid.Row="1"
                                                            Grid.Column="0"
                                                            Margin="5,0,5,0"
                                                            DockPanel.Dock="Bottom"
                                                            VirtualizationMode="Recycling">
                                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                        <VirtualizingStackPanel Orientation="Horizontal" VirtualizationMode="Recycling">
                                            <!--  time  -->
                                            <TextBlock FontFamily="Play"
                                                           FontSize="16"
                                                           Foreground="#FFE5E5E5"
                                                           Text="{Binding StartDate,
                                                                          StringFormat={}{0:HH:mm}}"
                                                           TextAlignment="Center"
                                                           TextWrapping="NoWrap" />

                                        </VirtualizingStackPanel>
                                    </Viewbox>
                                </VirtualizingStackPanel>
                                <VirtualizingStackPanel Grid.Row="2"
                                                            Grid.Column="0"
                                                            Margin="5,0,5,0"
                                                            DockPanel.Dock="Bottom"
                                                            VirtualizationMode="Recycling">
                                    <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                                        <!--  day  -->
                                        <TextBlock FontFamily="Play"
                                                       FontSize="16"
                                                       Foreground="#FFE5E5E5"
                                                       Text="{Binding StartDate,
                                                                      StringFormat={}{0:dddd}}"
                                                       TextAlignment="Center"
                                                       TextWrapping="NoWrap" />
                                    </Viewbox>

                                </VirtualizingStackPanel>
                                <Image Grid.RowSpan="3"
                                           Grid.Column="1"
                                           Width="30"
                                           Height="30"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{Binding SportView.LineObject.GroupSport.SportDescriptor, Converter={StaticResource SportDescriptorToIconConverter}}">
                                </Image>
                            </Grid>
                        </VirtualizingStackPanel>
                    </Label>

                    <!--  today  -->
                    <Label Height="73"
                               Margin="0"
                               AutomationProperties.AutomationId="Today"
                               Padding="0"
                               Visibility="{Binding StartDate,
                                                    Converter={StaticResource bTimeToVisibilityConverter}}">
                        <VirtualizingStackPanel Grid.Row="0"
                                                    Grid.Column="0"
                                                    Width="134"
                                                    Height="73"
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding StartDate,
                                                                         Converter={StaticResource bTimeToVisibilityConverter}}">
                            <!--
                                    <VirtualizingStackPanel.Background>
                                    <ImageBrush ImageSource="{converters2:ResolveImagePath Path=BackgroundTime.png}" />
                                    </VirtualizingStackPanel.Background>
                                -->

                            <!--  not started  -->
                            <Grid Visibility="{Binding LiveBetStatus, Converter={StaticResource bStatusToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="54" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="15" />
                                    <RowDefinition Height="36" />
                                    <RowDefinition Height="15" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <!--  status image  -->
                                <!--
                                        <Image x:Name="StatusImage"
                                        Grid.Row="0"
                                        Grid.RowSpan="5"
                                        Grid.Column="0"
                                        Width="6"
                                        Height="70">
                                        <Image.Source>
                                        
                                        <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                        <Binding Path="IsEnabled" />
                                        <Binding Path="LivePeriodInfo" />
                                        <Binding Path="AllEnabledOddCount" />
                                        </MultiBinding>
                                        
                                        </Image.Source>
                                        </Image>
                                    -->


                                <Viewbox Grid.Row="1"
                                             Grid.Column="0"
                                             MinWidth="58"
                                             MaxWidth="58"
                                             Margin="0,2,2,-2"
                                             HorizontalAlignment="Right"
                                             Stretch="Uniform"
                                             StretchDirection="DownOnly">
                                    <TextBlock FontFamily="Play"
                                                   FontSize="30"
                                                   Foreground="#FFE5E5E5"
                                                   Text="{Binding StartDate,
                                                                  StringFormat={}{0:mm}}"
                                                   TextAlignment="Center"
                                                   TextWrapping="NoWrap" />
                                </Viewbox>

                                <!--  main text  -->
                                <Viewbox Grid.Row="2"
                                             Grid.Column="0"
                                             Margin="0,-5,0,-5"
                                             Stretch="Uniform"
                                             StretchDirection="DownOnly">
                                    <TextBlock FontFamily="Play"
                                                   FontSize="50"
                                                   FontWeight="Bold"
                                                   Foreground="#FFE5E5E5"
                                                   Text="{Binding StartDate,
                                                                  StringFormat={}{0:HH}}"
                                                   TextAlignment="Center"
                                                   TextWrapping="NoWrap" />
                                </Viewbox>

                                <Image Grid.RowSpan="5"
                                           Grid.Column="1"
                                           Width="30"
                                           Height="30"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Source="{Binding SportView.LineObject.GroupSport.SportDescriptor, Converter={StaticResource SportDescriptorToIconConverter}}">
                                </Image>
                            </Grid>

                            <!--  started  -->
                            <StackPanel MinHeight="73"
                                            Orientation="Horizontal"
                                            Visibility="{Binding LiveBetStatus,
                                                                 Converter={StaticResource bInversStatusToVisibilityConverter}}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger>
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                        <Binding Path="IsEnabled" />
                                                        <Binding Path="LivePeriodInfo" />
                                                        <Binding Path="AllEnabledOddCount" />
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <DataTrigger.Value>red</DataTrigger.Value>
                                                <Setter Property="Background" Value="#AAd01f00" />
                                            </DataTrigger>
                                            <DataTrigger>
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                        <Binding Path="IsEnabled" />
                                                        <Binding Path="LivePeriodInfo" />
                                                        <Binding Path="AllEnabledOddCount" />
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <DataTrigger.Value>orange</DataTrigger.Value>
                                                <Setter Property="Background" Value="#AAffa800" />
                                            </DataTrigger>
                                            <DataTrigger>
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                        <Binding Path="IsEnabled" />
                                                        <Binding Path="LivePeriodInfo" />
                                                        <Binding Path="AllEnabledOddCount" />
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <DataTrigger.Value>green</DataTrigger.Value>
                                                <Setter Property="Background" Value="#AA67b457" />
                                            </DataTrigger>
                                            <DataTrigger>
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                        <Binding Path="IsEnabled" />
                                                        <Binding Path="LivePeriodInfo" />
                                                        <Binding Path="AllEnabledOddCount" />
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <DataTrigger.Value>purple</DataTrigger.Value>
                                                <Setter Property="Background" Value="#997470c0" />
                                            </DataTrigger>
                                            <DataTrigger>
                                                <DataTrigger.Binding>
                                                    <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                        <Binding Path="IsEnabled" />
                                                        <Binding Path="LivePeriodInfo" />
                                                        <Binding Path="AllEnabledOddCount" />
                                                    </MultiBinding>
                                                </DataTrigger.Binding>
                                                <DataTrigger.Value>orange_overtime</DataTrigger.Value>
                                                <Setter Property="Background" Value="#99FF8211" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Grid Visibility="{Binding LiveMInuteVisibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="54" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
