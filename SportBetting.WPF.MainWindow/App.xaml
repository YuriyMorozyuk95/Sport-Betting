<Application
    x:Class="SportBetting.WPF.Prism.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:SportBetting.WPF.Prism.Models;assembly=SportBetting.WPF.Prism.Shared"
    xmlns:shared="clr-namespace:SportBetting.WPF.Prism.Shared;assembly=SportBetting.WPF.Prism.Shared"
    DispatcherUnhandledException="ApplicationDispatcherUnhandledException">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlobalResources.xaml" />
                <!--  Generic Catel theme  -->
                <ResourceDictionary>
                    <shared:InvertBooleanConverter x:Key="InvertBooleanConverter" />
                    <shared:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter" />
                    <shared:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityConverter" />
                    <shared:CollectionToWidthConverter x:Key="CollectionToWidthConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
