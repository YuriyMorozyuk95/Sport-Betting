                                               FontSize="22"
                                               FontWeight="Bold"
                                               Foreground="#FFFFFFFF"
                                               LineHeight="22"
                                               Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_ODD}}"
                                               TextAlignment="Right"
                                               TextWrapping="Wrap" />
                                </Viewbox>
                                <Viewbox Grid.Row="0"
                                         Grid.Column="1"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Center"
                                         StretchDirection="DownOnly">
                                    <TextBlock AutomationProperties.AutomationId="TotalOdds"
