                        <DockPanel x:Name="dpnlContent"
                                   Width="{TemplateBinding Width}"
                                   Height="88"
                                   LastChildFill="True">
                            <DockPanel.Background>
                                <ImageBrush ImageSource="{wpf:ResolveImagePath Path=NumericButtonCenter.png}" />
                            </DockPanel.Background>

                            <DockPanel x:Name="dpnlLeft"
                                       Width="3"
                                       Height="88"
