                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.CLOSE}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                    <Button Width="170"
                            Height="60"
                            Margin="5,0,5,0"
                            Command="{Binding CashOutCommand}"
                            Style="{StaticResource navigationButton}">
                        <Button.Visibility>
                            <MultiBinding Converter="{StaticResource myMultyBooleanToVisibilityConverter}">
                                <MultiBinding.Bindings>
                                    <Binding Path="StationRepository.AllowAnonymousBetting" />
                                    <Binding Converter="{StaticResource BiggerThanToBooleanConverter}"
                                             ConverterParameter="0"
                                             Path="ChangeTracker.CurrentUser.Cashpool" />
                                    <Binding Path="IsAnonymousUser" />
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </Button.Visibility>
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFEFEFEF"
                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.CASH_OUT}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>

                </StackPanel>

                <StackPanel Margin="5,0,0,0"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right"
                            Orientation="Horizontal">
                    <Button Width="170"
                            Height="60"
                            Margin="5,0,5,0"
                            Command="{Binding StoreTicketCommand}"
                            Style="{StaticResource navigationButton}"
                            Visibility="{Binding StationRepository.IsStoreTicketEnabled,
                                                 Converter={StaticResource myBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFEFEFEF"
                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_PRINT_STORE_TICKET_HEADER}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                    <Button Width="170"
                            Height="60"
                            Margin="5,0,5,0"
                            Command="{Binding InsertCreditNoteCommand}"
                            Style="{StaticResource navigationButton}"
                            Visibility="{Binding StationRepository.AllowAnonymousBetting,
                                                 Converter={StaticResource myBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFEFEFEF"
                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.INSERT_CREDITNOTE}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>

                    <Button Width="312"
                            Height="60"
                            Margin="5,0,0,0"
                            Command="{Binding PlaceBetCommand}"
                            IsEnabled="{Binding IsEnabledPlaceBet}"
                            Style="{StaticResource orangeButton}"
                            Visibility="{Binding AskLoginAnonymous,
                                                 Converter={StaticResource myInverseBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFEFEFEF"
                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.Place_Your_Bet}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                    <Button Width="312"
                            Height="60"
                            Margin="5,0,5,0"
                            Command="{Binding OpenLoginCommand}"
                            Style="{StaticResource orangeButton}"
                            Visibility="{Binding AskLoginAnonymous,
                                                 Converter={StaticResource myBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFEFEFEF"
                                       LineHeight="22"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_FORM_LOGIN}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>
                    </Button>
                </StackPanel>


            </DockPanel>
            <DockPanel Name="NotificationBar"
                       Height="55"
                       Margin="1,1,1,1"
                       Background="White"
                       DockPanel.Dock="Bottom"
                       Visibility="{Binding ShowNotification,
                                            Converter={StaticResource myBooleanToVisibilityConverter}}"
                       ZIndex="-10">

                <TextBlock Name="lbNotificationText"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="HelveticaNeue-Bold"
                           FontSize="20"
                           Foreground="Black"
                           IsEnabled="{Binding }"
                           Text="{Binding NotificationText}">
                    <TextBlock.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AnimateNotificationText}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Duration="0:0:0:0.5"
                                                                 From="1.0"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="0.0" />



                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <Setter Property="TextBlock.Text" Value="{Binding NotificationText, Mode=OneTime}" />
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>

                                                <DoubleAnimation Duration="0:0:0:0.5"
                                                                 From="0.0"
                                                                 Storyboard.TargetProperty="Opacity"
                                                                 To="1.0" />

                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>

                                </DataTrigger>

                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>


            </DockPanel>

            <ScrollViewer x:Name="scroller"
                          Grid.Row="0"
                          MinHeight="100"
                          DockPanel.Dock="Top"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          Template="{StaticResource hiddenScrollViewerControl}">
                <!--  upper large items container  -->
                <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding TicketHandler.TicketsInBasket}">
                    <ItemsControl.Resources>
                        <DataTemplate DataType="{x:Type shared1:Ticket}">
                            <ItemsControl x:Name="icContent"
                                          HorizontalContentAlignment="Stretch"
                                          ItemsSource="{Binding TipItems}">
                                <ItemsControl.Resources>
                                    <DataTemplate DataType="{x:Type viewObjects:TipItemVw}">
                                        <StackPanel>
                                            <Border Height="57"
                                                    Margin="5,0"
                                                    BorderBrush="#FF5D5E5F"
                                                    BorderThickness="0,0,0,1">
                                                <DockPanel LastChildFill="True">
                                                    <DockPanel.Background>#50000000</DockPanel.Background>
                                                    <ToggleButton Name="CheckOdd"
                                                                  Width="47"
                                                                  Margin="20,0,0,0"
                                                                  Command="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                                                   AncestorLevel=2,
                                                                                                                   AncestorType={x:Type Grid}},
                                                                                    Path=DataContext.CheckBetCommand}"
                                                                  CommandParameter="{Binding}"
                                                                  DockPanel.Dock="Left"
                                                                  IsChecked="{Binding IsChecked,
                                                                                      Mode=TwoWay}"
                                                                  Style="{StaticResource BetcenterSmallTogglePressButton}">
                                                        <TextBlock Name="CheckArrow"
                                                                   FontFamily="Wingdings 2"
                                                                   FontSize="28"
                                                                   FontWeight="Bold"
                                                                   Padding="0,7,0,0"
                                                                   Text="P"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap" />
                                                    </ToggleButton>
                                                    <ToggleButton Name="BankOdd"
                                                                  Width="47"
                                                                  Margin="20,0,0,0"
                                                                  Command="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                                                   AncestorLevel=2,
                                                                                                                   AncestorType={x:Type Grid}},
                                                                                    Path=DataContext.BankBetCommand}"
                                                                  CommandParameter="{Binding}"
                                                                  DockPanel.Dock="Left"
                                                                  IsChecked="{Binding IsBank,
                                                                                      Mode=OneWay}"
                                                                  Style="{StaticResource BetcenterSmallTogglePressButton}"
                                                                  Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}},
                                                                                       Path=DataContext.TicketHandler.IsVisibleBank,
                                                                                       Converter={StaticResource myBooleanToVisibilityConverter}}">
                                                        <ToggleButton.IsEnabled>
                                                            <MultiBinding Converter="{StaticResource myMultyBooleanConverter}">
                                                                <MultiBinding.Bindings>
                                                                    <Binding Path="IsBankEnabled" />
                                                                    <Binding Path="IsBankEditable" />
                                                                    <Binding Path="IsChecked" />
                                                                </MultiBinding.Bindings>
                                                            </MultiBinding>
                                                        </ToggleButton.IsEnabled>


                                                        <TextBlock FontFamily="HelveticaNeue-Bold"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Padding="0,3,0,0"
                                                                   Text="B"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap" />
                                                    </ToggleButton>
                                                    <ToggleButton Name="DeleteOdd"
                                                                  Width="47"
                                                                  Margin="20,0,5,0"
                                                                  Command="{Binding RelativeSource={RelativeSource FindAncestor,
                                                                                                                   AncestorLevel=2,
                                                                                                                   AncestorType={x:Type Grid}},
                                                                                    Path=DataContext.OnDeleteBetCommand}"
                                                                  CommandParameter="{Binding}"
                                                                  DockPanel.Dock="Right"
                                                                  Style="{StaticResource BetcenterSmallTogglePressButton}">
                                                        <TextBlock Margin="1.5,-5,0,0"
                                                                   FontFamily="HelveticaNeue-Bold"
                                                                   FontSize="36"
                                                                   FontWeight="Bold"
                                                                   RenderTransformOrigin="0.5,0.5"
                                                                   Text="+"
                                                                   TextAlignment="Center"
                                                                   TextWrapping="Wrap">
                                                            <TextBlock.RenderTransform>
                                                                <RotateTransform Angle="45" />
                                                            </TextBlock.RenderTransform>
                                                        </TextBlock>
                                                    </ToggleButton>
                                                    <Grid Margin="20,0,0,0" DockPanel.Dock="Left">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="7*" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="1.2*" />
                                                            <ColumnDefinition Width="2.5*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="*" />
                                                        </Grid.RowDefinitions>

                                                        <StackPanel Grid.Row="0"
                                                                    Grid.Column="0"
                                                                    Orientation="Horizontal">
                                                            <StackPanel.Resources>
                                                                <Style TargetType="{x:Type TextBlock}">
                                                                    <Setter Property="Foreground">
                                                                        <Setter.Value>
                                                                            <MultiBinding Converter="{StaticResource myTippItemForegroundColorConverter}">
                                                                                <MultiBinding.Bindings>
                                                                                    <Binding Path="Match.MatchView.IsEnabled" />
                                                                                    <Binding Path="BetDomain.BetDomainView.IsEnabled" />
                                                                                    <Binding Path="IsEnabled" />
                                                                                </MultiBinding.Bindings>
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </StackPanel.Resources>
                                                            <!--  home : away  -->
                                                            <Viewbox VerticalAlignment="Center">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <!--  home  -->
                                                                    <TextBlock Margin="0,5,0,0"
                                                                               FontFamily="HelveticaNeue-Bold"
                                                                               FontSize="22"
                                                                               FontWeight="Bold"
                                                                               Text="{Binding Match.MatchView.HomeCompetitorName}"
                                                                               TextAlignment="Left"
                                                                               TextWrapping="Wrap" />
                                                                    <!--  :  -->
                                                                    <TextBlock Margin="0,5,0,0"
                                                                               FontFamily="HelveticaNeue-Bold"
                                                                               FontSize="22"
                                                                               FontWeight="Bold"
                                                                               Text=" : "
                                                                               TextAlignment="Left"
                                                                               TextWrapping="Wrap" />
                                                                    <!--  away  -->
                                                                    <TextBlock Margin="0,5,0,0"
                                                                               FontFamily="HelveticaNeue-Bold"
                                                                               FontSize="22"
                                                                               FontWeight="Bold"
                                                                               Text="{Binding Match.MatchView.AwayCompetitorName}"
                                                                               TextAlignment="Left"
                                                                               TextWrapping="Wrap" />
                                                                    <!--  score  -->
                                                                    <TextBlock Margin="15,5,0,0"
                                                                               FontFamily="HelveticaNeue-Bold"
                                                                               FontSize="22"
                                                                               FontWeight="Bold"
                                                                               Foreground="#FFFF4D00"
                                                                               Text="{Binding Match.MatchView.LiveScore}"
                                                                               TextAlignment="Left"
                                                                               TextWrapping="Wrap" />
                                                                </StackPanel>
                                                            </Viewbox>
                                                        </StackPanel>
                                                        <TextBlock Grid.Row="1"
                                                                   Grid.Column="0"
                                                                   Margin="0,3,0,0"
                                                                   FontFamily="HelveticaNeue-Bold"
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Foreground="#FF9FA7AF"
                                                                   TextAlignment="Left"
                                                                   TextWrapping="Wrap">
                                                            <TextBlock.Text>
                                                                <MultiBinding Converter="{StaticResource myBasketSportBreadcrumbsConverter}" ConverterCulture="{x:Static gl:CultureInfo.CurrentCulture}">
                                                                    <MultiBinding.Bindings>
                                                                        <Binding Path="Match.MatchView.SportView.DisplayName" />
                                                                        <Binding Path="Match.MatchView.CategoryView.DisplayName" />
                                                                        <Binding Path="Match.MatchView.TournamentView.DisplayName" />
                                                                    </MultiBinding.Bindings>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                        <StackPanel Grid.Row="0"
                                                                    Grid.RowSpan="2"
                                                                    Grid.Column="1"
                                                                    VerticalAlignment="Center"
                                                                    Visibility="{Binding Match.MatchView.MoreBetdomainCount,
                                                                                         Converter={StaticResource BiggerThanToVisibilityConverter},
                                                                                         ConverterParameter=0}">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="PreviewMouseUp">
                                                                    <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorLevel=2, AncestorType={x:Type Grid}}, Path=DataContext.RowClickCommand}" CommandParameter="{Binding}" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>

                                                            <BulletDecorator Width="65"
                                                                             Height="40"
                                                                             HorizontalAlignment="Center"
                                                                             VerticalAlignment="Center"
                                                                             Background="Transparent">
                                                                <BulletDecorator.Bullet>
                                                                    <Border Margin="10,5,0,0"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"
                                                                            Background="#FF26282a"
                                                                            BorderBrush="#FF3b3f42"
                                                                            BorderThickness="1"
                                                                            CornerRadius="5">
                                                                        <!--
                                                                            <Border.Style>
                                                                            <Style TargetType="Border">
                                                                            
                                                                            <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ShowGreenBackgroungForOddCount}" Value="True">
                                                                            <Setter Property="Background" Value="DimGray" />
                                                                            </DataTrigger>
                                                                            </Style.Triggers>
                                                                            
                                                                            </Style>
                                                                            </Border.Style>
                                                                        -->
                                                                        <StackPanel Margin="3,3,5,3" Orientation="Horizontal">
                                                                            <TextBlock HorizontalAlignment="Center"
                                                                                       VerticalAlignment="Center"
                                                                                       FontFamily="HelveticaNeue"
                                                                                       FontSize="12"
                                                                                       Foreground="#FFE5E5E5"
                                                                                       Text="+" />
                                                                            <TextBlock Margin="3,3,5,3"
                                                                                       FontFamily="HelveticaNeue"
                                                                                       FontSize="12"
                                                                                       Foreground="#FFE5E5E5"
                                                                                       Text="{Binding Match.MatchView.MoreBetdomainCount}" />
                                                                        </StackPanel>
                                                                    </Border>
                                                                </BulletDecorator.Bullet>
                                                            </BulletDecorator>


                                                        </StackPanel>

                                                        <TextBlock Grid.Row="0"
                                                                   Grid.Column="2"
                                                                   Margin="0,0,10,0"
                                                                   FontFamily="HelveticaNeue-Bold"
                                                                   FontSize="14"
                                                                   FontWeight="Bold"
                                                                   Foreground="#FFEFEFEF"
                                                                   Text="Stake / Bet"
                                                                   TextAlignment="Left"
                                                                   TextWrapping="Wrap">
                                                            <TextBlock.Visibility>
                                                                <MultiBinding Converter="{StaticResource myMultyBooleanToVisibilityConverter}">
                                                                    <MultiBinding.Bindings>
                                                                        <Binding Converter="{StaticResource BiggerThanToBooleanConverter}"
                                                                                 ConverterParameter="1"
                                                                                 Path="DataContext.TicketHandler.TicketsInBasket.Count"
                                                                                 RelativeSource="{RelativeSource AncestorLevel=3,
                                                                                                                 AncestorType=StackPanel}" />
                                                                    </MultiBinding.Bindings>
                                                                </MultiBinding>
                                                            </TextBlock.Visibility>
                                                        </TextBlock>

                                                        <ToggleButton Grid.Row="1"
                                                                      Grid.Column="2"
                                                                      Width="66"
                                                                      Height="33"
                                                                      Margin="0,-10,0,0"
                                                                      HorizontalAlignment="Left"
                                                                      Style="{StaticResource StakeBetTogglePressButton}">
                                                            <ToggleButton.Visibility>
                                                                <MultiBinding Converter="{StaticResource myMultyBooleanToVisibilityConverter}">
                                                                    <MultiBinding.Bindings>
                                                                        <Binding Converter="{StaticResource BiggerThanToBooleanConverter}"
                                                                                 ConverterParameter="1"
                                                                                 Path="DataContext.TicketHandler.TicketsInBasket.Count"
                                                                                 RelativeSource="{RelativeSource AncestorLevel=3,
                                                                                                                 AncestorType=StackPanel}" />
                                                                    </MultiBinding.Bindings>
                                                                </MultiBinding>
                                                            </ToggleButton.Visibility>
                                                            <TextBlock FontFamily="HelveticaNeue-Bold"
                                                                       FontSize="14"
                                                                       FontWeight="Bold"
                                                                       Text="{Binding Path=DataContext.Stake,
                                                                                      RelativeSource={RelativeSource AncestorLevel=2,
                                                                                                                     AncestorType={x:Type StackPanel}},
                                                                                      StringFormat=\{0:N2\},
                                                                                      ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}"
                                                                       TextWrapping="Wrap">
                                                                <TextBlock.Visibility>
                                                                    <MultiBinding Converter="{StaticResource myMultyBooleanToVisibilityConverter}">
                                                                        <MultiBinding.Bindings>
                                                                            <Binding Converter="{StaticResource BiggerThanToBooleanConverter}"
                                                                                     ConverterParameter="1"
                                                                                     Path="DataContext.TicketHandler.TicketsInBasket.Count"
                                                                                     RelativeSource="{RelativeSource AncestorLevel=3,
                                                                                                                     AncestorType=StackPanel}" />
                                                                        </MultiBinding.Bindings>
                                                                    </MultiBinding>
                                                                </TextBlock.Visibility>
                                                            </TextBlock>
                                                        </ToggleButton>









                                                        <StackPanel Grid.Row="0"
                                                                    Grid.Column="3"
                                                                    HorizontalAlignment="Right"
                                                                    Orientation="Horizontal">
                                                            <StackPanel.Resources>
                                                                <Style TargetType="{x:Type TextBlock}">
                                                                    <Setter Property="Foreground">
                                                                        <Setter.Value>
                                                                            <MultiBinding Converter="{StaticResource myTippItemForegroundColorConverter}">
                                                                                <MultiBinding.Bindings>
                                                                                    <Binding Path="Match.MatchView.IsEnabled" />
                                                                                    <Binding Path="BetDomain.BetDomainView.IsEnabled" />
                                                                                    <Binding Path="IsEnabled" />
                                                                                </MultiBinding.Bindings>
                                                                            </MultiBinding>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </StackPanel.Resources>



                                                            <TextBlock Margin="0,10,10,0"
                                                                       FontFamily="HelveticaNeue-Bold"
                                                                       FontSize="14"
                                                                       FontWeight="Bold"
                                                                       Text="{Binding OddView.DisplayName}"
                                                                       TextAlignment="Right"
                                                                       TextWrapping="Wrap" />
                                                            <TextBlock Margin="0,10,10,0"
                                                                       FontFamily="HelveticaNeue-Bold"
                                                                       FontSize="14"
                                                                       FontWeight="Bold"
                                                                       Text="{Binding BetDomain.SpecialOddValue.Value}"
                                                                       TextAlignment="Right"
                                                                       TextWrapping="Wrap"
                                                                       Visibility="{Binding BetDomain.SpecialOddValue.Value,
                                                                                            Converter={StaticResource BiggerThanToVisibilityCollapsedConverter},
                                                                                            ConverterParameter=0}" />
                                                            <TextBlock Width="70"
                                                                       Margin="0,5,0,0"
                                                                       DataContext="{Binding OddView}"
                                                                       FontFamily="HelveticaNeue-Bold"
                                                                       FontSize="22"
                                                                       FontWeight="Bold"
                                                                       Foreground="#FFEFEFEF"
                                                                       Style="{StaticResource OddResultTextBlockBasketWithBlinkingBetcenter}"
                                                                       Text="{Binding Value}"
                                                                       TextAlignment="Right"
                                                                       TextWrapping="NoWrap" />
                                                        </StackPanel>
                                                        <StackPanel Grid.Row="1"
                                                                    Grid.Column="3"
                                                                    HorizontalAlignment="Right">
                                                            <TextBlock Margin="0,3,0,0"
                                                                       FontFamily="HelveticaNeue-Bold"
                                                                       FontSize="12"
                                                                       FontWeight="Bold"
                                                                       Foreground="#FF9FA7AF"
                                                                       Text="{Binding BetDomain.BetDomainView.DisplayName}"
                                                                       TextAlignment="Right"
                                                                       TextWrapping="Wrap" />
                                                        </StackPanel>
                                                    </Grid>

                                                </DockPanel>
                                            </Border>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.Resources>
                            </ItemsControl>

                        </DataTemplate>
                    </ItemsControl.Resources>
                </ItemsControl>
            </ScrollViewer>

        </DockPanel>
    </DockPanel>
</Window>
