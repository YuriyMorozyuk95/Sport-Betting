                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#FFFFFFFF"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding TicketHandler.TicketState}" Value="Multy">
                                                <Setter Property="TextBlock.Text" Value="{Binding Multy}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TicketHandler.TicketState}" Value="System">
                                                <Setter Property="TextBlock.Text" Value="{Binding SystemBanker}" />
