                                                <Setter Property="TextBlock.Text" Value="{Binding Single}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding TicketHandler.TicketsInBasket.Count, Converter={StaticResource BiggerThanToBooleanConverter}, ConverterParameter=1}" Value="True">
                                                <Setter Property="TextBlock.Text" Value="{Binding MultySingles}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

