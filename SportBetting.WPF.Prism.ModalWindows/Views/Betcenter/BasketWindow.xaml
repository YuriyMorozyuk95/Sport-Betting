                                Height="60"
                                DockPanel.Dock="Right"
                                Style="{StaticResource navigationButton}"
                                wpfHelp:ButtonBehaviour.PreviewMouseDownCommand="{Binding ScrollDownStart}"
                                wpfHelp:ButtonBehaviour.PreviewMouseUpCommand="{Binding ScrollDownStop}">
