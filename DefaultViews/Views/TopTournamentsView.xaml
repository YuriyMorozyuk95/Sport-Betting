    <UserControl.Background>
        <ImageBrush  AlignmentX="Left"
                     AlignmentY="Top"
                     ImageSource="{converters2:ResolveImagePath Path=LiveView/fon.png}"
                     Stretch="None"
                     TileMode="Tile"
                     Viewport="0,0,33,36"
                     ViewportUnits="Absolute" />
    </UserControl.Background>

    <ScrollViewer x:Name="ScrollViewer"
                  PanningMode="VerticalOnly"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  Template="{StaticResource secondVisibleScrollView}">
        <ItemsControl VerticalAlignment="Top"
                      HorizontalContentAlignment="Stretch"
                      ItemsSource="{Binding Categories}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Expander IsExpanded="True"
                                  Style="{DynamicResource ExpanderStyle}"
                                  Visibility="{Binding SoccerVisibility}"
                                  Margin="15,15,15,0">
                            <!--<StackPanel Name="panel1">-->
                            <StackPanel Name="Stack"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Vertical">


                                <Border Margin="15,0,15,0"
                                        Padding="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="#808080"
                                        BorderThickness="2,0,2,2"
                                        CornerRadius="0,0,10,10">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{converters2:ResolveImagePath Path=SportIcon/Background.png}" />
                                    </Border.Background>
                                    <Grid>
                                        <Border Name="mask"
                                                Background="White"
                                                CornerRadius="7" />
                                        <StackPanel>
                                            <StackPanel.OpacityMask>
                                                <VisualBrush Visual="{Binding ElementName=mask}" />
                                            </StackPanel.OpacityMask>

                                            <!--<Border BorderBrush="#808080" BorderThickness="3" Margin="15,0,15,0" CornerRadius="15" >-->
                                            <!--  StackPanel.ZIndex="1" Height="{Binding ElementName=UniGrid,Path=ActualHeight}" Width="{Binding ElementName=UniGrid,Path=ActualWidth}"  -->
                                            <!--  Height="{Binding Path=CountAll,Converter={StaticResource WidthHeightConvertor1}}"  -->
                                            <!--
                                                Width="{Binding ElementName=Stack,Path=ActualWidth,Converter={StaticResource WidthHeightConvertor1}}"
                                                >
                                            -->
                                            <ItemsControl HorizontalContentAlignment="Stretch"
                                                          ItemTemplateSelector="{StaticResource myTemplateSelector}"
                                                          ItemsSource="{Binding Tournaments}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Name="UniGrid"
                                                                     Columns="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.ColumnsAmount}"
                                                                     StackPanel.ZIndex="0" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>


                                        </StackPanel>

                                    </Grid>

                                </Border>

                                <!--</Border>-->
                            </StackPanel>

                            <!--</StackPanel>-->
                        </Expander>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="ScrollChanged">
                <i:InvokeCommandAction Command="{Binding ScrollChangedCommand}"
                                       CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ContentVerticalOffset}" />
            </i:EventTrigger>
            <i:EventTrigger EventName="LayoutUpdated">
                <i:InvokeCommandAction Command="{Binding LayoutUpdatedCommand}"
                                       CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}, AncestorLevel=1}, Path=ActualWidth}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
    </ScrollViewer>

</UserControl>
