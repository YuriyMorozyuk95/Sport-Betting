<UserControl x:Class="DefaultViews.Views.UserTicketsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:TranslationByMarkupExtension="clr-namespace:TranslationByMarkupExtension;assembly=TranslationByMarkupExtension"
             xmlns:converters="clr-namespace:SportBetting.WPF.Prism.Shared.Converters;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:TranslationByMarkupExtension;assembly=TranslationByMarkupExtension"
             xmlns:models="clr-namespace:SportBetting.WPF.Prism.Shared.Models;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:shared="clr-namespace:SportBetting.WPF.Prism.Shared;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:viewModels="clr-namespace:ViewModels;assembly=ViewModels"
             xmlns:viewModels2="clr-namespace:ViewModels.ViewModels;assembly=ViewModels"
             xmlns:views="clr-namespace:DefaultViews.Views"
             x:Name="Window"
             d:DataContext="{d:DesignInstance Type=viewModels2:UserTicketsViewModel}"
             Background="Black"
             SnapsToDevicePixels="True"
             mc:Ignorable="d">
    <UserControl.Resources>
        <shared:InverseBooleanToVisibilityHiddenConverter x:Key="myBooleanToVisibilityHiddenConverter" />
        <shared:BooleanToVisibilityCollapsedConverter x:Key="BooleanToVisibilityConverter" />
        <Style x:Key="readonlyNavigationButton"
               TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Margin"
                    Value="-1,0,0,0" />
            <Setter Property="SnapsToDevicePixels"
                    Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Padding="5"
                                Background="{StaticResource LightBlueToDarkBluer_LinearGradientBrush}"
                                CornerRadius="13">
                            <DockPanel x:Name="dpnlContent"
                                       Width="{TemplateBinding Width}"
                                       Height="60"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       LastChildFill="True">
                                <Image x:Name="imgLeft"
                                       Width="4"
                                       Height="60"
                                       DockPanel.Dock="Left"
                                       Source="{converters:ResolveImagePath Path=BreadcrumbsLeft.png}" />
                                <Image x:Name="imgRight"
                                       Width="4"
                                       Height="60"
                                       DockPanel.Dock="Right"
                                       Source="{converters:ResolveImagePath Path=BreadcrumbsRight.png}" />
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  RecognizesAccessKey="True"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </DockPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="dpnlContent"
                                        Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="{converters:ResolveImagePath Path=DownUpButtonPressed.png}" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="imgLeft"
                                        Property="Width"
                                        Value="0" />
                                <Setter TargetName="imgRight"
                                        Property="Width"
                                        Value="0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TicketsFiltering_RadioButton_Style"
               TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Name="Root_Border"
                                BorderBrush="#ACACAC"
                                Background="Transparent"
                                BorderThickness="2"
                                CornerRadius="5">  
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="Root_Border"
                                        Property="Background"
                                        Value="{StaticResource LightBlueToDarkBluer_LinearGradientBrush}" />
                            </Trigger>
                            <Trigger Property ="IsChecked" Value="False">
                                <Setter TargetName="Root_Border"
                                        Property="Background"
                                        Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ticketButton"
               TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="32" />
                            </Grid.ColumnDefinitions>
                            <Border Name="Border"
                                    Grid.ColumnSpan="2"
                                    CornerRadius="5"
                                    BorderBrush="Transparent"
                                    BorderThickness="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0"
                                                         EndPoint="0,1">
                                        <GradientStop Color="#787878"
                                                      Offset="0" />
                                        <GradientStop Color="#262626"
                                                      Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <StackPanel Margin="2"
                                        Orientation="Horizontal">
                                <TextBlock Margin="10,0,5,0"
                                           Name="someText"
                                           FontFamily="Play"
                                           FontSize="20"
                                           FontWeight="Normal"
                                           VerticalAlignment="Center"
                                           Foreground="{Binding OpenLostWonColor}"
                                           Text="{Binding FullNumber}"
                                           TextAlignment="Left"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                            <Image Grid.Column="1"
                                   Margin="0,0,5,0"
                                   Height="22"
                                   Width="22"
                                   Name="arrow"
                                   HorizontalAlignment="Right"
                                   Source="{converters:ResolveImagePath Path=LiveView/strelka-close.png}" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked"
                                     Value="True">
                                <Setter TargetName="arrow"
                                        Property="Source"
                                        Value="{converters:ResolveImagePath Path=LiveView/strelka-open.png}" />
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="Gray" />
                                <Setter TargetName="someText"
                                        Property="Foreground"
                                        Value="#EC9421" />
                                <Setter TargetName="Border"
                                        Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="0,1">
                                            <GradientStop Color="#262626"
                                                          Offset="0" />
                                            <GradientStop Color="#262626"
                                                          Offset="1.0" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
       



    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush AlignmentX="Left"
                                    AlignmentY="Top"
                                    ImageSource="{converters:ResolveImagePath Path=LiveView/fon.png}"
                                    Stretch="None"
                                    TileMode="Tile"
                                    Viewport="0,0,33,36"
                                    ViewportUnits="Absolute" />
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Style>
        <Grid x:Name="grdHeader"
              Grid.Row="0"
              Height="Auto"
              Background="#3C3C3C">

            <UniformGrid HorizontalAlignment="Center"
                         Margin="0,25,0,25"
                         Columns="5">
                <RadioButton Height="60"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             AutomationProperties.AutomationId="ticketsAll"
                             Command="{Binding TicketTypeCommand}"
                             CommandParameter="0"
                             GroupName="TicketsTypeGroup"
                             IsChecked="True"
                             Style="{StaticResource TicketsFiltering_RadioButton_Style}">
                    <Viewbox StretchDirection="DownOnly">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="23"
                                       FontWeight="Normal"
                                       Foreground="#fff"
                                       Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_FORM_ALL}}" />
                        </StackPanel>
                    </Viewbox>
                </RadioButton>

                <RadioButton Height="60"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             AutomationProperties.AutomationId="ticketsWon"
                             Command="{Binding TicketTypeCommand}"
                             CommandParameter="1"
                             GroupName="TicketsTypeGroup"
                             Style="{StaticResource TicketsFiltering_RadioButton_Style}">
                    <Viewbox StretchDirection="DownOnly">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="23"
                                       FontWeight="Normal"
                                       Foreground="#fff"
                                       Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_TICKETWON}}" />
                        </StackPanel>
                    </Viewbox>
                </RadioButton>

                <RadioButton Height="60"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             AutomationProperties.AutomationId="ticketsLost"
                             Command="{Binding TicketTypeCommand}"
                             CommandParameter="2"
                             GroupName="TicketsTypeGroup"
                             Style="{StaticResource TicketsFiltering_RadioButton_Style}">
                    <Viewbox StretchDirection="DownOnly">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="23"
                                       FontWeight="Normal"
                                       Foreground="#fff"
                                       Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_TICKETLOST}}" />
                        </StackPanel>
                    </Viewbox>
                </RadioButton>

                <RadioButton Height="60"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             AutomationProperties.AutomationId="ticketsCanceled"
                             Command="{Binding TicketTypeCommand}"
                             CommandParameter="3"
                             GroupName="TicketsTypeGroup"
                             Style="{StaticResource TicketsFiltering_RadioButton_Style}">
                    <Viewbox StretchDirection="DownOnly">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Margin="15,0,15,0"
                                VerticalAlignment="Center"
                                       FontSize="23"
                                       FontWeight="Normal"
                                       Foreground="#fff"
                                       Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_FORM_CANCELLED}}" />
                        </StackPanel>
                    </Viewbox>
                </RadioButton>

                <RadioButton Height="60"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             AutomationProperties.AutomationId="ticketsOpen"
                             Command="{Binding TicketTypeCommand}"
                             CommandParameter="4"
                             GroupName="TicketsTypeGroup"
                             Style="{StaticResource TicketsFiltering_RadioButton_Style}">
                    <Viewbox StretchDirection="DownOnly">
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="23"
                                       FontWeight="Normal"
                                       Foreground="#fff"
                                       Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_TICKETOPEN}}" />
                        </StackPanel>
                    </Viewbox>
                </RadioButton>
            </UniformGrid>
        </Grid>

        <Grid x:Name="grdFooter"
              Grid.Row="2"
              Height="Auto"
              Margin="0,20,0,0">
            <DockPanel HorizontalAlignment="Center">
                <DockPanel Height="60"
                           LastChildFill="True">
                    <DockPanel.Background>
                        <ImageBrush ImageSource="{converters:ResolveImagePath Path=BreadcrumbsCenter.png}" />
                    </DockPanel.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <DockPanel Grid.Column="0"
                                   LastChildFill="False">
                            <!--  previous  -->
                            <Button Width="60"
                                    AutomationProperties.AutomationId="Previous"
                                    Command="{Binding PreviousPage}"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource navigationButton}">
                                <Image Width="20"
                                       Height="17"
                                       RenderTransformOrigin="0.5,0.5"
                                       Source="{converters:ResolveImagePath Path=ArrowDown.png}">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Button>
                            <!--  first  -->
                            <Button Width="60"
                                    AutomationProperties.AutomationId="First"
                                    Command="{Binding FirstPage}"
                                    DockPanel.Dock="Right"
                                    Style="{StaticResource navigationButton}">
                                <Image Width="20"
                                       Height="17"
                                       RenderTransformOrigin="0.5,0.5"
                                       Source="{converters:ResolveImagePath Path=Last.png}">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="180" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Button>
                        </DockPanel>
                        <Button Grid.Column="1"
                                Width="100"
                                AutomationProperties.AutomationId="Current"
                                IsEnabled="False"
                                Style="{StaticResource readonlyNavigationButton}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#FFEFEFEF"
                                           Text="{Binding TicketsStartPage}" />
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#FFEFEFEF"
                                           Text="/" />
                                <TextBlock FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#FFEFEFEF"
                                           Text="{Binding AllPages}" />
                            </StackPanel>
                        </Button>
                        <DockPanel Grid.Column="2"
                                   LastChildFill="False">
                            <!--  page number  -->
                            <!--  next  -->
                            <Button Width="60"
                                    AutomationProperties.AutomationId="Next"
                                    Command="{Binding NextPage}"
                                    DockPanel.Dock="Left"
                                    Style="{StaticResource navigationButton}">
                                <Image Width="20"
                                       Height="17"
                                       RenderTransformOrigin="0.5,0.5"
                                       Source="{converters:ResolveImagePath Path=ArrowUp.png}">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Button>
                            <!--  last  -->
                            <Button Width="60"
                                    AutomationProperties.AutomationId="Last"
                                    Command="{Binding LastPage}"
                                    DockPanel.Dock="Left"
                                    Style="{StaticResource navigationButton}">
                                <Image Width="20"
                                       Height="17"
                                       Source="{converters:ResolveImagePath Path=Last.png}" />
                            </Button>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </DockPanel>


        </Grid>

        <Grid x:Name="grdContent"
              Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <Grid Margin="0,5,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                               Foreground="#828282"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               FontFamily="Play"
                               FontWeight="Normal"
                               Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_TICKETNUMBER}}" />
                    <TextBlock Grid.Column="1"
                               Foreground="#828282"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               FontFamily="Play"
                               FontWeight="Normal"
                               Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_FORM_STATUS}}" />
                    <TextBlock Grid.Column="2"
                               Foreground="#828282"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               FontFamily="Play"
                               FontWeight="Normal"
                               Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.Time}}" />
                </Grid>

                <ItemsControl HorizontalContentAlignment="Stretch"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              BorderThickness="0"                          
                              ScrollViewer.CanContentScroll="True"
                              AlternationCount="2"
                              ItemsSource="{Binding Tickets}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="LayoutUpdated">
                            <i:InvokeCommandAction Command="{Binding GridCreated}"
                                                   CommandParameter="{Binding ElementName=grdContent}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--DataType="{x:Type models:TicketView}"-->
                            <StackPanel Name="ticketRow"                                       
                                        Visibility="{Binding Hidden, Converter={StaticResource myBooleanToVisibilityHiddenConverter}}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="LayoutUpdated">
                                        <i:InvokeCommandAction Command="{Binding DataContext.ItemCreated, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"
                                                               CommandParameter="{Binding ElementName=ticketRow}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentPresenter}}, Path=(ItemsControl.AlternationIndex)}"
                                                             Value="0">
                                                    <Setter Property="Background"
                                                            Value="#3C3C3C" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentPresenter}}, Path=(ItemsControl.AlternationIndex)}"
                                                             Value="1">
                                                    <Setter Property="Background"
                                                            Value="Transparent" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>

                                    <ToggleButton Grid.Column="0"
                                                  Grid.Row="0"
                                                  Name="TestButton"
                                                  IsChecked="{Binding Path=IsButtonChecked}"
                                                  Height="40"
                                                  Margin="5"                                                 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  AutomationProperties.AutomationId="Ticket"
                                                  Style="{StaticResource ticketButton}"
                                                  Command="{Binding DataContext.ShowTicketCommand,
                                                              RelativeSource={RelativeSource AncestorType={x:Type Grid},
                                                                                             AncestorLevel=3}}"
                                                  CommandParameter="{Binding}">


                                    </ToggleButton>
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="0"
                                               Margin="0,15,0,0"
                                               Visibility="{Binding PendingApprovalVisibility}"
                                               Text="{TranslationByMarkupExtension:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_TICKETWON}}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Foreground="{Binding OpenLostWonColor}"
                                               Style="{StaticResource rowEntry}">
                                    </TextBlock>
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="0"
                                               Margin="0,15,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               AutomationProperties.AutomationId="Status"
                                               Foreground="{Binding OpenLostWonColor}"
                                               Style="{StaticResource rowEntry}"
                                               Text="{Binding Status }" />



                                    <TextBlock Grid.Column="2"
                                               Grid.Row="0"
                                               Margin="0,15,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               AutomationProperties.AutomationId="Date"
                                               Foreground="{Binding OpenLostWonColor}"
                                               Style="{StaticResource rowEntry}"
                                               Text="{Binding CreatedAt,
                                                              StringFormat=\{0:dd.MM.yyyy HH:mm\}}" /><!---->

                                  
                                    <StackPanel Visibility="{Binding Path=IsButtonChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                Grid.ColumnSpan="3"
                                                Grid.Row="1">
                                        <!---->
                                        <Grid Margin="20,20,20,20"
                                              DockPanel.Dock="Top">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*">
                                                    <RowDefinition.Style>
                                                        <Style>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ShowStakePerRow}"
                                                                             Value="">
                                                                    <Setter Property="RowDefinition.MinHeight"
                                                                            Value="0" />
                                                                    <Setter Property="RowDefinition.Height"
                                                                            Value="0" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </RowDefinition.Style>
                                                </RowDefinition>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="33*" />
                                                <ColumnDefinition Width="33*" />
                                                <ColumnDefinition Width="33*" />
                                            </Grid.ColumnDefinitions>                                    
                                        <Line Grid.Row="0"
                     Grid.ColumnSpan="3"
                      X1="0"
                      Y1="0"
                      Margin="70,0,70,0"
                      X2="1900"
                      Y2="0"
                      Stroke="#323232"
                     StrokeThickness="4" />
                                            <!--  station  -->
                                        <DockPanel Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="70,10,70,10">
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
                                                           Style="{StaticResource normalText}"
                                                           Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_STATION_NAME}}" />
                                            </Viewbox>
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
                                                           Style="{StaticResource normalText}"
                                                           Text=":" />
                                            </Viewbox>
                                            <Viewbox HorizontalAlignment="Right"
                                                     StretchDirection="DownOnly">
                                                <TextBlock Margin="10,0,0,0"
                                                           HorizontalAlignment="Right"
                                                           AutomationProperties.AutomationId="StationName"
                                                           DockPanel.Dock="Right"
                                                           Style="{StaticResource importantText}"
                                                           Text="{Binding DataContext.Station , RelativeSource={RelativeSource AncestorType={x:Type Grid},
                                                                                             AncestorLevel=3}}" />
                                            </Viewbox>
                                        </DockPanel>
                                        <!--  Date  -->
                                        <DockPanel Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="70,10,70,10">
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
                                                           Style="{StaticResource normalText}"
                                                           Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_FORM_DATE}}" />
                                            </Viewbox>
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
                                                           Style="{StaticResource normalText}"
                                                           Text=":" />
                                            </Viewbox>                                        
                                            <!--  date  -->
                                            <Viewbox HorizontalAlignment="Right"
                                                     StretchDirection="DownOnly">
                                                <TextBlock Margin="5,0,0,0"
                                                           HorizontalAlignment="Right"
                                                           AutomationProperties.AutomationId="Date"
                                                           DockPanel.Dock="Right"
                                                           Style="{StaticResource importantText}"
                                                           Text="{Binding DataContext.Date, RelativeSource={RelativeSource AncestorType={x:Type Grid},
                                                                                             AncestorLevel=3},
                                              StringFormat=\{0:dd.MM.yyyy HH:mm\}}" />
                                            </Viewbox>
                                        </DockPanel>
                                        <!--  Paid  -->
                                        <DockPanel Grid.Row="1"
                                                   Grid.Column="2"
                                                   Margin="70,10,70,10">
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
                                                           Style="{StaticResource normalText}"
                                                           Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_TICKETPAID}}" />
                                            </Viewbox>
                                            <Viewbox StretchDirection="DownOnly">
                                                <TextBlock DockPanel.Dock="Left"
