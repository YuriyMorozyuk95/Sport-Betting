        <converters:ShowBasketWheelConvertor1 x:Key="ShowBigListButtons" />
        <converters:ShowBasketWheelConvertor2 x:Key="ShowSmallListButtons" />
        
        <Storyboard x:Key="StakeUpdatedStoryboard">
            <ColorAnimation AutoReverse="True"
                            Duration="0:0:0.5"
                            Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
