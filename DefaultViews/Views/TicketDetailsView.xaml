                                                           FontFamily="Play"
                                                           FontSize="14"
                                                           Foreground="{Binding OpenLostWonColor}"
                                                           LineHeight="18"
                                                           Text="{Binding Score}"
                                                           TextAlignment="Center"
                                                           TextWrapping="Wrap" />
