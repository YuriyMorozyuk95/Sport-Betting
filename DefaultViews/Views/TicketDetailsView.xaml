                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <DockPanel HorizontalAlignment="Right" Dock="Top">
                    <Button Width="200"
                            Height="60"
                            Margin="10"
                            AutomationProperties.AutomationId="CashOut"
                            Command="{Binding PrintCreditNoteCommand}"
                            Focusable="False"
                            Style="{StaticResource orangeButton}"
                            Visibility="{Binding ShowCreditNoteButton,
                                                 Converter={StaticResource myBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock Margin="10,0,5,0"
                                       FontFamily="Play"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#FFC0C0C0"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_CASH_BUTTON}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>

                    </Button>
                    <Button Width="200"
                            Height="60"
                            Margin="10"
                            AutomationProperties.AutomationId="TransferMoney"
                            Command="{Binding TransferMoneyCommand}"
                            Focusable="False"
                            Style="{StaticResource orangeButton}"
                            Visibility="{Binding ShowTranferToAccountButton,
                                                 Converter={StaticResource myBooleanToVisibilityConverter}}">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock Margin="10,0,5,0"
                                       FontFamily="Play"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#FFC0C0C0"
                                       Text="{Binding TransferMoneyString}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>

                    </Button>
                    <Button Width="200"
                            Height="60"
                            Margin="10"
                            AutomationProperties.AutomationId="Close"
                            Command="{Binding CloseCommand}"
                            Focusable="False"
                            Style="{StaticResource orangeButton}"
                            Visibility="Visible">
                        <Viewbox StretchDirection="DownOnly">
                            <TextBlock Margin="10,0,5,0"
                                       FontFamily="Play"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#FFC0C0C0"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.CLOSE}}"
                                       TextAlignment="Left"
                                       TextWrapping="Wrap" />
                        </Viewbox>

                    </Button>

                </DockPanel>

            </DockPanel>
