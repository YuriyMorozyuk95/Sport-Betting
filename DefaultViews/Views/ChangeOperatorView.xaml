        <ScrollViewer x:Name="ScrollViewer"
                      Grid.Row="0"
                      Margin="0,17,0,0"
                      PanningMode="VerticalOnly"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      Template="{StaticResource hiddenScrollViewerControl}">
            <ItemsControl HorizontalContentAlignment="Stretch"
