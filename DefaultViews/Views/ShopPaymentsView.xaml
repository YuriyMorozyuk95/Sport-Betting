                <Viewbox StretchDirection="DownOnly">
                    <TextBlock Style="{StaticResource normalText}" Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_ADD_CREDIT}}" />
                </Viewbox>
            </Button>
            <Button Width="200"
