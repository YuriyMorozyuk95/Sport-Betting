                        FontSize="22"
                        Foreground="#DCDCDC"
                        IsChecked="{Binding ChangeTracker.UserChecked}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </Border>
