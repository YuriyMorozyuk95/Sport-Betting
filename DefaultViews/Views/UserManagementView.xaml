                        </Expander.Header>
                        <Expander.Content>
                            <StackPanel Margin="17,0,0,0">
                                <RadioButton
                                Margin="0,10,0,5"
                                AutomationProperties.AutomationId="BindMyCard"
                                Command="{Binding ShowPayoutCommand}"
