                                GroupName="SmallButtons"                                
                                HorizontalAlignment="Left"                                
                                IsChecked="{Binding ChangeTracker.TicketChecked}"
                                Style="{StaticResource menuItemButton_Style}">
                                </RadioButton>
                                <RadioButton
                                Margin="0,5,0,5"
