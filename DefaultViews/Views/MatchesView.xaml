                            </StackPanel.Background>
                            <ItemsControl ItemTemplate="{StaticResource CommonLiveMatchTemplate}"
                                          ItemsSource="{Binding VolleyballMatches}" />
                        </StackPanel>
                    </Border>
                </Expander>



            </StackPanel>
        </Grid>
    </ScrollViewer>

</UserControl>
