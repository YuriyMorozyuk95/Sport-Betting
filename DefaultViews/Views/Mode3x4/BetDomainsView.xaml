                            </DockPanel>
                            <!--  red cards of team 1  -->

                            <DockPanel Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="1,0,0,0"
                                       HorizontalAlignment="Left"
                                       DockPanel.Dock="Left">

                                <ItemsControl HorizontalContentAlignment="Left" ItemsSource="{Binding ChangeTracker.CurrentMatch.HomeTeamRedCards}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Width="10"
                                                   Height="16"
                                                   Margin="4,0,0,0"
                                                   Source="{converters:ResolveImagePath Path=red_card.png}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Horizontal" VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </DockPanel>

                            <!--  red cards of team 2  -->

                            <DockPanel Grid.Row="1"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       DockPanel.Dock="Right">

                                <ItemsControl HorizontalContentAlignment="Right" ItemsSource="{Binding ChangeTracker.CurrentMatch.AwayTeamRedCards}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Image Width="10"
                                                   Height="16"
                                                   Margin="2,0,2,0"
                                                   Source="{converters:ResolveImagePath Path=red_card.png}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Horizontal" VirtualizationMode="Recycling" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </DockPanel>

                        </Grid>

                        <Grid Grid.Row="1"
                              Grid.RowSpan="2"
                              Grid.Column="0"
                              Style="{StaticResource HomeGoalAnimation}">
                            <Grid.Resources />
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image x:Name="HomeTeamWonImage"
                                   Grid.Row="0"
                                   Width="53"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="{converters:ResolveImagePath Path=ResultsIconSelected.png}" />
                            <TextBlock Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       FontFamily="Play"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_GOAL_TEXT}}"
                                       TextAlignment="Center"
                                       TextWrapping="NoWrap" />
                        </Grid>
                        <!--  Live  -->
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Center"
                                    Orientation="Horizontal"
                                    Visibility="{Binding ChangeTracker.CurrentMatch.LiveBetStatus,
                                                         Converter={StaticResource bInversStatusToVisibilityConverter}}">
                            <TextBlock Margin="15,5,2,0"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Play"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       Text="{Binding ChangeTracker.CurrentMatch.LiveMinuteToShow}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Visibility="{Binding ChangeTracker.CurrentMatch.ShomMinutes}"/>

                            <TextBlock Margin="5,5,2,5"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Play"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       Text="{l:Translate Key={x:Static l:MultistringTags.Terminal_Minutes}}"
                                       TextAlignment="Center"
                                       Visibility="{Binding ChangeTracker.CurrentMatch.ShomMinutes}" />

                            <TextBlock Margin="15,5,2,5"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Play"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       Text="-"
                                       TextAlignment="Center"
                                       Visibility="{Binding ChangeTracker.CurrentMatch.ShomMinutes}" />

                            <TextBlock Margin="15,5,2,5"
                                       VerticalAlignment="Bottom"
                                       FontFamily="Play"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       Text="{Binding ChangeTracker.CurrentMatch.LivePeriodInfoString}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                        <!--  Future  -->
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               AutomationProperties.AutomationId="EventDate">
                            <StackPanel Margin="0,0,0,10"
                                        HorizontalAlignment="Center"
                                        Orientation="Horizontal"
                                        Visibility="{Binding ChangeTracker.CurrentMatch.LiveBetStatus,
                                                             Converter={StaticResource bStatusToVisibilityConverter}}">
                                <TextBlock Margin="0,0,0,6"
                                           VerticalAlignment="Bottom"
                                           FontFamily="Play"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#FFFF4D00"
                                           Text="{Binding ChangeTracker.CurrentMatch.StartDate,
                                                          StringFormat={}{0:HH}}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,0,0,0"
                                           VerticalAlignment="Top"
                                           FontFamily="Play"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#FFFF4D00"
                                           Text="{Binding ChangeTracker.CurrentMatch.StartDate,
                                                          StringFormat={}{0:mm}}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,0,0,6"
                                           VerticalAlignment="Bottom"
                                           FontFamily="Play"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#FFFF4D00"
                                           Text="  "
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" />
                                <TextBlock Margin="0,0,0,6"
                                           VerticalAlignment="Bottom"
                                           FontFamily="Play"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#FFFF4D00"
                                           Text="{Binding ChangeTracker.CurrentMatch.StartDate,
                                                          StringFormat={}{0:dd.MMMM}}"
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Label>
                        <Grid Grid.Row="1"
                              Grid.RowSpan="2"
                              Grid.Column="2"
                              Style="{StaticResource AwayGoalAnimation}">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Image x:Name="AwayTeamWonImage"
                                   Grid.Row="0"
                                   Width="53"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Source="{converters:ResolveImagePath Path=ResultsIconSelected.png}" />
                            <TextBlock Grid.Row="1"
                                       Grid.ColumnSpan="3"
                                       HorizontalAlignment="Center"
                                       FontFamily="Play"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#FFFF4D00"
                                       LineStackingStrategy="BlockLineHeight"
                                       Text="{l:Translate Key={x:Static TranslationByMarkupExtension:MultistringTags.TERMINAL_GOAL_TEXT}}"
                                       TextAlignment="Center"
                                       TextWrapping="NoWrap" />
                        </Grid>
                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   Margin="0,0,0,20"
                                   VerticalAlignment="Top"
                                   FontFamily="Play"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#FFFF4D00"
                                   Text="{Binding ChangeTracker.CurrentMatch.LiveScore}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding ChangeTracker.CurrentMatch.LiveBetStatus,
                                                        Converter={StaticResource bInversStatusToVisibilityConverter}}" />

                        <TextBlock Grid.Row="2"
                                   Grid.Column="0"
                                   Margin="0,0,0,20"
                                   VerticalAlignment="Top"
                                   FontFamily="Play"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#FFFF4D00"
                                   Text="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_MATCH_ENDED}}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding ChangeTracker.CurrentMatch.LiveBetStatus,
                                                        Converter={StaticResource MatchStatusToVisibilityConverter}}" />
                        <TextBlock Text="{Binding ChangeTracker.CurrentMatch.GoalsTextTest}" />
                    </Grid>
                    <!--  END of NON-Statistics grid  -->

                </Grid>
            </Border>

            <ItemsControl Grid.Row="1"
                          ItemTemplate="{StaticResource NewLiveBetDomainTemplate}"
                          ItemsSource="{Binding ChangeTracker.CurrentMatch.VisibleBetDomainViews}" />
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="ScrollChanged">
                    <i:InvokeCommandAction Command="{Binding ScrollChangedCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}, Path=ContentVerticalOffset}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

        </Grid>
    </ScrollViewer>
</UserControl>

