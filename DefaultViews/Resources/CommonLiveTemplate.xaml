<UserControl x:Class="DefaultViews.Resources.CommonLiveTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters2="clr-namespace:SportBetting.WPF.Prism.Shared.Converters;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:l="clr-namespace:TranslationByMarkupExtension;assembly=TranslationByMarkupExtension"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:panels="clr-namespace:xMetropol.UI.Panels;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:resources="clr-namespace:DefaultViews.Resources"
             xmlns:shared="clr-namespace:SportBetting.WPF.Prism.Shared;assembly=SportBetting.WPF.Prism.Shared"
             xmlns:viewModels="clr-namespace:SportRadar.DAL.ViewObjects;assembly=DAL"
             xmlns:viewModels1="clr-namespace:ViewModels;assembly=ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:MatchVw}"
             d:DesignWidth="1000"
             mc:Ignorable="d">
    <UserControl.Resources>
        <shared:MatchColorBarConverter x:Key="sMatchColorImage" />
        <converters2:PercentageConverter x:Key="myPercentageConverter" />
        <shared:InversTimeToBooleanConverter x:Key="InversTimeToBooleanConverter" />
        <shared:InversStatusToBooleanConverter x:Key="InversStatusToBooleanConverter" />

        <DataTemplate x:Key="NotToday">
            <Label Margin="0"
                   AutomationProperties.AutomationId="NotToday"
                   Padding="0">

                <Grid Width="Auto"
                      Height="73"
                      HorizontalAlignment="Center"
                      IsEnabled="{Binding IsEnabled}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>

                        <RowDefinition Height="30" />
                        <RowDefinition Height="19" />
                        <RowDefinition Height="24" />

                    </Grid.RowDefinitions>
                    <!--  date && month  -->
                    <StackPanel Grid.Row="0"
                                Grid.Column="0"
                                Margin="5,5,5,0"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                DockPanel.Dock="Top"
                                Orientation="Horizontal">
                        <TextBlock FontFamily="Play"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{Binding  RelativeSource={RelativeSource FindAncestor, AncestorLevel=3, AncestorType={x:Type ContentPresenter}}, Path=DataContext.LiveColor}"
                                   Text="{Binding StartDate,
                                                  StringFormat={}{0:dd.}}"
                                   TextAlignment="Center"
                                   TextWrapping="NoWrap" />
                        <TextBlock FontFamily="Play"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{Binding  RelativeSource={RelativeSource FindAncestor, AncestorLevel=3, AncestorType={x:Type ContentPresenter}}, Path=DataContext.LiveColor}"
                                   Text="{Binding StartDate,
                                                  StringFormat={}{0:MM}}"
                                   TextAlignment="Center"
                                   TextWrapping="NoWrap" />

                    </StackPanel>
                    <!--  time && day  -->
                    <!--  time  -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Margin="5,0,5,0"
                               DockPanel.Dock="Bottom"
                               FontFamily="Play"
                               FontSize="14"
                               Foreground="#4C4C4C"
                               Text="{Binding StartDate,
                                              StringFormat={}{0:HH:mm}}"
                               TextAlignment="Center"
                               TextWrapping="NoWrap" />

                    <!--  day  -->
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="5,0,5,0"
                               DockPanel.Dock="Bottom"
                               FontFamily="Play"
                               FontSize="16"
                               Foreground="#4C4C4C"
                               Text="{Binding StartDate,
                                              StringFormat={}{0:ddd}}"
                               TextAlignment="Center"
                               TextWrapping="NoWrap" />

                    <!--<Image Grid.RowSpan="3"
                           Grid.Column="1"
                           Width="30"
                           Height="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{Binding SportDescriptor,
                                            Converter={StaticResource SportDescriptorToIconConverter}}" />-->
                </Grid>
            </Label>
        </DataTemplate>

        <DataTemplate x:Key="NotStartedTemplate">
            <resources:NotStartedTemplate />
        </DataTemplate>

        <DataTemplate x:Key="StartedTemplate">
            <resources:StartedTemplate />
        </DataTemplate>


        <DataTemplate x:Key="Today" DataType="viewModels:MatchVw">
            <Label Width="80"
                   Height="73"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   AutomationProperties.AutomationId="Today"
                   Content="{Binding}"
                   Padding="0">
                <Label.Style>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding LiveBetStatus, Converter={StaticResource InversStatusToBooleanConverter}}" Value="true">
                                <Setter Property="Label.ContentTemplate" Value="{StaticResource NotStartedTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding LiveBetStatus, Converter={StaticResource InversStatusToBooleanConverter}}" Value="false">
                                <Setter Property="Label.ContentTemplate" Value="{StaticResource StartedTemplate}" />
                            </DataTrigger>

                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>

        </DataTemplate>
    </UserControl.Resources>
    <Label Margin="0"
           HorizontalContentAlignment="Stretch"
           AutomationProperties.AutomationId="Match"
           Padding="0"
           Visibility="{Binding Visibility}">
        <StackPanel Orientation="Vertical">

            <!--  sport header  Background="#FFf0f0f0"                Visibility="{Binding IsHeader,
                                       Converter={StaticResource myBooleanToVisibilityConverter}}">-->

            <Grid Height="0"
                 Visibility="Hidden"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           Margin="15,0,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           AutomationProperties.AutomationId="SportName"
                           Style="{StaticResource headerText}"
                           Text="{Binding SportView.DisplayName}" />

                <!--<StackPanel Grid.Column="1"
                            Margin="0,0,2,0"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <TextBlock Width="68"
                               Margin="0,0,1,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource headerText}"
                               Text="1"
                               TextAlignment="Center" />
                    <TextBlock Width="68"
                               Margin="0,0,1,0"
                               VerticalAlignment="Center"
                               Style="{StaticResource headerText}"
                               Text="X"
                               TextAlignment="Center"
                               Visibility="{Binding ShowXTip}" />
                    <TextBlock Width="68"
                               VerticalAlignment="Center"
                               Style="{StaticResource headerText}"
                               Text="2"
                               TextAlignment="Center" />

                    <StackPanel Orientation="Horizontal" Visibility="{Binding ShowUOBetDomain}">
                        <TextBlock Width="70"
                                   Margin="0,0,1,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="G"
                                   TextAlignment="Center" />

                        <TextBlock Width="68"
                                   Margin="0,0,1,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="U"
                                   TextAlignment="Center" />
                        <TextBlock Width="68"
                                   Margin="0,0,1,0"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource headerText}"
                                   Text="O"
                                   TextAlignment="Center" />
                    </StackPanel>
                </StackPanel> Background="{Binding LiveGradientColor}" -->
            </Grid>

            <Border >
                <Grid Margin="0,2,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>


                    <!--  temporary closed cover  -->
                    <Grid Grid.RowSpan="2" Grid.ColumnSpan="3">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger>
                                        <DataTrigger.Binding>
                                            <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                <Binding Path="IsEnabled" />
                                                <Binding Path="LivePeriodInfo" />
                                                <Binding Path="AllEnabledOddCount" />
                                                <Binding Path="LineObject" />
                                            </MultiBinding>
                                        </DataTrigger.Binding>
                                        <!--<DataTrigger.Value>interrupted</DataTrigger.Value>
                                        <Setter Property="Canvas.Background">
                                            <Setter.Value>
                                                <ImageBrush AlignmentX="Left"
                                                            AlignmentY="Top"
                                                            ImageSource="{converters2:ResolveImagePath Path=Disabled_row.png}"
                                                            Stretch="Fill" />
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="ZIndex" Value="1" />-->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Play"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#FFb3b3b3"
                                   TextAlignment="Center"
                                   TextWrapping="NoWrap">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger>
                                            <DataTrigger.Binding>
                                                <MultiBinding Converter="{StaticResource ResourceKey=sMatchColorImage}">
                                                    <Binding Path="IsEnabled" />
                                                    <Binding Path="LivePeriodInfo" />
                                                    <Binding Path="AllEnabledOddCount" />
                                                    <Binding Path="LineObject" />
                                                </MultiBinding>
                                            </DataTrigger.Binding>
                                            <DataTrigger.Value>interrupted</DataTrigger.Value>
                                            <Setter Property="Text" Value="{l:Translate Key={x:Static l:MultistringTags.TERMINAL_TEMPORARY_CLOSED}}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>



                    <Label Margin="0"
                           Content="{Binding}"
                           Padding="0"
                          >
                        <Label.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StartDate, Converter={StaticResource InversTimeToBooleanConverter}}" Value="false">
                                        <Setter Property="Label.ContentTemplate" Value="{StaticResource NotToday}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StartDate, Converter={StaticResource InversTimeToBooleanConverter}}" Value="true">
                                        <Setter Property="Label.ContentTemplate" Value="{StaticResource Today}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>

                    </Label>



                    <!--  go to bet domains button  -->
                    <Border Grid.Row="0"
                            Grid.Column="1"
                            Margin="-1,0,4,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            AutomationProperties.AutomationId="{Binding Path=Name,
                                                                        StringFormat='Match_{0}'}"
                            Padding="0, 3, 0, 0"
                            Background="Transparent"
                           
                            >
                        <!--Style="{StaticResource MatchButton}"-->
                        <DockPanel LastChildFill="False">
                            <!--  number of bet domains  -->


                            <!--  upper row  -->
                            <StackPanel Name="MatchButton"
                                        DockPanel.Dock="Top"
                                        Orientation="Vertical">
                                <!--  display name  -->
                                <panels:FlexStackPanel Margin="0,5,0,0" StretchDirection="DownOnly">

                                    <TextBlock Name="TbxHomeCompetitor"
                                               VerticalAlignment="Top"
                                               AutomationProperties.AutomationId="Name"
                                               FontFamily="Play"
                                               FontSize="19"
                                               FontWeight="Bold"
                                               Foreground="{Binding  RelativeSource={RelativeSource FindAncestor, AncestorLevel=3, AncestorType={x:Type ContentPresenter}}, Path=DataContext.LiveColor}"
                                               LineHeight="19"
                                               LineStackingStrategy="BlockLineHeight"
                                               Text="{Binding HomeCompetitorName}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap" />
                                    <Grid Visibility="{Binding IsVisibleHomeTeamRedCards, Converter={StaticResource myBooleanToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Top"
                                                   FontFamily="Play"
                                                   FontSize="19"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFFFFF"
                                                   LineHeight="19"
                                                   LineStackingStrategy="BlockLineHeight"
                                                   Text=" "
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap" />
                                        <Border Grid.Column="1"
                                                Width="{Binding ActualHeight,
                                                                ElementName=TbxHomeCompetitor,
                                                                Converter={StaticResource myPercentageConverter},
                                                                ConverterParameter='0.7'}"
                                                Height="{Binding ActualHeight,
                                                                 ElementName=TbxHomeCompetitor,
                                                                 Converter={StaticResource myPercentageConverter},
                                                                 ConverterParameter='0.9'}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Background="Red"
                                                CornerRadius="3,3,3,3">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1.2" />
                                            </Border.Effect>
                                        </Border>
                                        <TextBlock Grid.Column="1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Play"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFFFFF"
                                                   Text="{Binding CardsTeam1}" />
                                    </Grid>
                                    <TextBlock Grid.Column="2"
                                               VerticalAlignment="Top"
                                               FontFamily="Play"
                                               FontSize="19"
                                               FontWeight="Bold"
                                               Foreground="{Binding  RelativeSource={RelativeSource FindAncestor, AncestorLevel=3, AncestorType={x:Type ContentPresenter}}, Path=DataContext.LiveColor}"
                                               LineHeight="19"
                                               LineStackingStrategy="BlockLineHeight"
                                               Text=" : "
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="NoWrap" />
                                    <TextBlock Grid.Column="3"
                                               VerticalAlignment="Top"
                                               AutomationProperties.AutomationId="Name"
                                               FontFamily="Play"
                                               FontSize="19"
                                               FontWeight="Bold"
                                               Foreground="{Binding  RelativeSource={RelativeSource FindAncestor, AncestorLevel=3, AncestorType={x:Type ContentPresenter}}, Path=DataContext.LiveColor}"
                                               LineHeight="19"
                                               LineStackingStrategy="BlockLineHeight"
                                               Text="{Binding AwayCompetitorName}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap" />
                                    <Grid Grid.Column="4" Visibility="{Binding IsVisibleAwayTeamRedCards, Converter={StaticResource myBooleanToVisibilityConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   VerticalAlignment="Top"
                                                   FontFamily="Play"
                                                   FontSize="19"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFFFFF"
                                                   LineHeight="19"
                                                   LineStackingStrategy="BlockLineHeight"
                                                   Text=" "
                                                   TextTrimming="CharacterEllipsis"
                                                   TextWrapping="NoWrap" />
                                        <Border Grid.Column="1"
                                                Width="{Binding ActualHeight,
                                                                ElementName=TbxHomeCompetitor,
                                                                Converter={StaticResource myPercentageConverter},
                                                                ConverterParameter='0.7'}"
                                                Height="{Binding ActualHeight,
                                                                 ElementName=TbxHomeCompetitor,
                                                                 Converter={StaticResource myPercentageConverter},
                                                                 ConverterParameter='0.9'}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Background="Red"
                                                CornerRadius="3,3,3,3">
                                            <Border.Effect>
                                                <DropShadowEffect ShadowDepth="1.2" />
                                            </Border.Effect>
                                        </Border>
                                        <TextBlock Grid.Column="1"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontFamily="Play"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Foreground="#FFFFFFFF"
                                                   Text="{Binding CardsTeam2}" />
                                    </Grid>
                                </panels:FlexStackPanel>

                                <TextBlock Margin="3, -2, 0, 0"
                                           VerticalAlignment="Top"
                                           AutomationProperties.AutomationId="LiveScore"
                                           FontFamily="Play"
                                           FontSize="19"
                                           FontWeight="Bold"
                                           Foreground="#FFFF4E00"
                                           LineHeight="19"
                                           Text="{Binding LiveScore}" />
                                <TextBlock AutomationProperties.AutomationId="TournamentName"
                                           FontFamily="Play"
                                           FontSize="13"
                                           FontWeight="Regular"
                                           Foreground="Black"
                                           Text="{Binding TournamentNameToShow}"
                                           TextAlignment="Left"
                                           TextTrimming="WordEllipsis"
                                           TextWrapping="NoWrap"
                                           Grid.Column="0" />
                            </StackPanel>
                            <!--  bottom row  -->
                            <!--<Grid DockPanel.Dock="Bottom" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                              

                            </Grid>-->
                        </DockPanel>
                    </Border>

                    <!--  odd buttons  -->
                    <StackPanel Grid.Row="0"
                                Grid.Column="2"
                                Orientation="Horizontal" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                            <TextBlock     Margin="3"                                 
                                           AutomationProperties.AutomationId="BaseBetDomain"
                                           FontFamily="Play"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#778275"
                                           Text="{Binding BaseBetDomainView.DisplayName}"
                                           TextAlignment="Center"
                                           TextWrapping="NoWrap" />
                            <StackPanel Orientation="Horizontal">
                                <Grid>

                                    <ToggleButton Name="OddToggleButton1"
                                                  Width="68"
                                                  Margin="0,0,1,0"
                                                  HorizontalAlignment="Right"
                                                  AutomationProperties.AutomationId="BD1_1"
                                                  CommandParameter="{Binding}"
                                                  DataContext="{Binding BaseBetDomainView.Odd1}"
                                                  IsChecked="{Binding IsSelected,
                                                              Mode=OneWay}"
                                                  IsEnabled="{Binding IsEnabled}"
                                                  Style="{StaticResource OddButtonLive}"
                                                  Visibility="{Binding Visibility}" />
                                    <!---->
                                    <TextBlock 
                                     Margin="5,-35,0,0"
                                               Height="10"
                                               Width="10"
                                        Text="1" 
                                        FontFamily="Play"
                                        Visibility="{Binding Visibility}"
                                        FontSize="11"
                                        FontWeight="Bold"
                                        Foreground="Gray"/>
                                     
                                </Grid>
                                <StackPanel Margin="0,0,1,0"
                                        Orientation="Horizontal"
                                        Visibility="{Binding ShowXTip}">
                                    <Grid>    
                                <ToggleButton Name="OddToggleButton2"
                                              Width="68"
                                              HorizontalAlignment="Right"
                                              AutomationProperties.AutomationId="BD1_X"
                                              CommandParameter="{Binding}"
                                              DataContext="{Binding BaseBetDomainView.Odd2}"
                                              IsChecked="{Binding IsSelected,
                                                                  Mode=OneWay}"
                                              IsEnabled="{Binding IsEnabled}"
                                           Style="{StaticResource OddButtonLive}"
                                              Visibility="{Binding Visibility}" />   <!---->
                                    <TextBlock Margin="5,-35,0,0"
                                               Height="10"
                                               Width="10"
                                               Visibility="{Binding Visibility}"
                                               Text="X"
                                               FontFamily="Play"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="Gray" />

                                </Grid>
                            </StackPanel>
                            <Grid>
                                <ToggleButton Name="OddToggleButton3"
                                              Width="68"
                                              Margin="0,0,0,0"
                                              HorizontalAlignment="Right"
                                              AutomationProperties.AutomationId="BD1_2"
                                              CommandParameter="{Binding}"
                                              DataContext="{Binding BaseBetDomainView.Odd3}"
                                              IsChecked="{Binding IsSelected,
                                                              Mode=OneWay}"
                                              IsEnabled="{Binding IsEnabled}"
                                              Style="{StaticResource OddButtonLive}"
                                              Visibility="{Binding Visibility}" />
                                <TextBlock Margin="5,-35,0,0"
                                           Height="10"
                                           Width="10"
                                           Text="2"
                                           FontFamily="Play"
                                           FontSize="11"
                                           Visibility="{Binding Visibility}"
                                           FontWeight="Bold"
                                           Foreground="Gray" />

                            </Grid>

                        </StackPanel>
                    </StackPanel>
                    <StackPanel Width="208" Margin="0,5,0,0"
                                   
                                    Orientation="Horizontal"
                                    Visibility="{Binding ShowUOBetDomain}">
                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Center"                                        
                                       FontFamily="Play"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#778275"
                                       >
                                    Goal
                            </TextBlock>
                            <Canvas Width="70"                                
                                    DataContext="{Binding UnderOverBetDomain}">
                                <TextBlock Canvas.Top="16"
                                           Foreground="#FFff4e00"
                                           Style="{StaticResource OddResultTextBlockLive}"
                                           Text="{Binding SpecialOddValue,
                                                          StringFormat=\{0:N2\},
                                                          ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
                            </Canvas>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Center"                                        
                                       FontFamily="Play"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#778275"
                                       >
                                    Under
                            </TextBlock>
                            <Grid>
                                <ToggleButton Name="OddToggleButton5"
                                              Width="68"
                                              Margin="0,0,1,0"
                                              HorizontalAlignment="Right"
                                              AutomationProperties.AutomationId="BD2_U"
                                              CommandParameter="{Binding}"
                                              DataContext="{Binding UnderOverBetDomain.Odd1}"
                                              IsChecked="{Binding IsSelected,
                                                              Mode=OneWay}"
                                              IsEnabled="{Binding IsEnabled}"
                                              Style="{StaticResource OddButtonLive}"
                                              Visibility="{Binding Visibility}" />
                                <TextBlock Margin="5,-35,0,0"
                                           Height="10"
                                           Width="10"
                                           Visibility="{Binding Visibility}"
                                           Text="U"
                                           FontFamily="Play"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="Gray" />

                            </Grid>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Center"                                        
                                       FontFamily="Play"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#778275"
                                       >
                                    Over
                            </TextBlock>
                            <Grid>
                                <ToggleButton Name="OddToggleButton6"
                                              Width="68"
                                              Margin="0,0,1,0"
                                              HorizontalAlignment="Right"
                                              AutomationProperties.AutomationId="BD2_O"
                                              CommandParameter="{Binding}"
                                              DataContext="{Binding UnderOverBetDomain.Odd3}"
                                              IsChecked="{Binding IsSelected,
                                                              Mode=OneWay}"
                                              IsEnabled="{Binding IsEnabled}"
                                              Style="{StaticResource OddButtonLive}"
                                              Visibility="{Binding Visibility}" />
                                <TextBlock Margin="5,-35,0,0"
                                           Height="10"
                                           Width="10"
                                           Text="O"
                                           Visibility="{Binding Visibility}"
                                           FontFamily="Play"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="Gray" />

                            </Grid>
                        </StackPanel>
                    </StackPanel>
        </StackPanel>

        <!--  second row  -->
        <DockPanel Grid.Row="1"
                               Grid.Column="1"
                               Margin="0,0,4,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               IsEnabled="False"
                               LastChildFill="True"
                               Visibility="{Binding LiveSecondRowVisibility}">
            <!--<TextBlock Margin="5"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left"
                                   FontFamily="Play"
                                   FontSize="13"
                                   FontWeight="Regular"
                                   Foreground="White"
                                   LineHeight="13"
                                   LineStackingStrategy="BlockLineHeight"
                                   Text="{Binding SecondMatchButtonRowText}"
                                   TextTrimming="CharacterEllipsis"
                                   TextWrapping="Wrap" />-->
            <!--<TextBlock Margin="0, 0, 5, 0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Right"
                                   FontFamily="Play"
                                   FontSize="13"
                                   FontWeight="Regular"
                                   Foreground="#FFd6ad0a"
                                   LineStackingStrategy="BlockLineHeight"
                                   Text="&gt;"
                                   TextAlignment="Right"
                                   TextWrapping="Wrap"
                                   Visibility="{Binding BottomSpecialBetDomain.DisplayName,
                                                        Converter={StaticResource textPresentToVisibilityConverter}}" />-->

        </DockPanel>

        <!--  odd buttons  -->
        <StackPanel Grid.Row="0"
                                Grid.Column="3"                                
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Orientation="Horizontal"
                                Visibility="{Binding LiveSecondRowVisibility}">
            <StackPanel Orientation="Vertical">
                <TextBlock 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Right"
                                   FontFamily="Play"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="#778275"
